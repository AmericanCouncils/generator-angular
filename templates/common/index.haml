!!!

-# Trickery with IE conditional comments
/[if lt IE 7] <html class="no-js lt-ie9 lt-ie8 lt-ie7" ng-app="<%= angularAppname %>">
/[if IE 7] <html class="no-js lt-ie9 lt-ie8" ng-app="<%= angularAppname %>">
/[if IE 8] <html class="no-js lt-ie9" ng-app="<%= angularAppname %>">
<!-- [if gt IE 8]> --> <html class="no-js" ng-app="<%= angularAppname %>"> <!-- <![endif] -->
-tab_up

%head
  %title <%= _(appname).titleize() %>
  %meta(charset="utf-8")
  %meta(content="IE=edge,chrome=1" http-equiv="X-UA-Compatible")
  %meta(content="" name="description")
  %meta(content="width=device-width" name="viewport")
  %link(href="styles/main.css" rel="stylesheet")

%body
  /[if lt IE 7]
    <p class="chromeframe">You are using an outdated browser.
    <a href="http://browsehappy.com/">Upgrade your browser today</a> or
    <a href="http://www.google.com/chromeframe/?redirect=true">install
    Google Chrome Frame</a> to better experience this site.</p>

  /[if lt IE 9]
    <script src="components/es5-shim/es5-shim.js"></script>
    <script src="components/json3/lib/json3.min.js"></script>

  .container(ng-view)

  /build:js scripts/scripts.js

  -# Library scripts
  %script(src="components/lodash/lodash.js")
  %script(src="components/underscore.string/lib/underscore.string.js")
  %script(src="init/integrate_underscore_string.js")
  %script(src="components/jquery/jquery.js")
  %script(src="components/angular/angular.js")
  <% if (resourceModule) { %>%script(src="components/angular-resource/angular-resource.js")<% } %>
  <% if (cookiesModule) { %>%script(src="components/angular-cookies/angular-cookies.js")<% } %>
  <% if (sanitizeModule) { %>%script(src="components/angular-sanitize/angular-sanitize.js")<% } %>
  %script(src="components/angular-bootstrap/ui-bootstrap-tpls.js")
  %script(src="components/angular-ui/build/angular-ui.js")

  -# App core scripts 
  %script(src="scripts/app.js")
  %script(src="templates.js")

  -# User module scripts

  /endbuild

-# End of IE trickery
-tab_down
</html>
